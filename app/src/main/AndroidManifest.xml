<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csed.edu.alexu.eg.virtualbookshelf">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/virbookshelflogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/virbookshelflogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.BookActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.EditShelfActivity"></activity>
    </application>

</manifest>